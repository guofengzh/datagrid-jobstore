<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:14.0 https://infinispan.org/schemas/infinispan-config-14.0.xsd
                            urn:infinispan:config:clustered-locks:14.0 https://infinispan.org/schemas/infinispan-config-14.0.xsd"
        xmlns="urn:infinispan:config:14.0"
        xmlns:ispn="urn:infinispan:config:14.0">

    <cache-container name="dtifCache" statistics="false" shutdown-hook="DEFAULT">
        <local-cache name="triggers" statistics="false">
            <!-- 5 minutes -->
            <expiration max-idle="300000" interval="5000"/>
            <memory max-count="10000" when-full="REMOVE"/>
        </local-cache>
    </cache-container>
</infinispan>
